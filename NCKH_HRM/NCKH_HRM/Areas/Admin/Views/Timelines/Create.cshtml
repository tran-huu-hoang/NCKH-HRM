@model NCKH_HRM.Models.Timeline

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<h1 class="py-3">Thêm mới ca học</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Ngày học</label>
                <input asp-for="DateLearn" class="form-control" />
                <span asp-validation-for="DateLearn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Năm học</label>
                <select asp-for="Year" class ="form-control" asp-items="ViewBag.Year"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
