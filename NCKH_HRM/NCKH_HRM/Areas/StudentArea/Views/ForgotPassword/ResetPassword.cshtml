@model NCKH_HRM.ViewModels.ForgotPasswordViewModels

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Reset Password</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/forgotpassword.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div class="reset-password-container">
        <div class="card reset-password-card">
            <div class="logo">Đặt lại mật khẩu</div>
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Mật khẩu mới" required>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu mới" required>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <button type="submit" class="btn btn-primary">Đặt lại mật khẩu</button>
            </form>
            <div class="text-center mt-3">
                <a asp-controller="Login" asp-action="Index">Quay lại đăng nhập</a>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>