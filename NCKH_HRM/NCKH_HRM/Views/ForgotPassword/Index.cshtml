<body class="hold-transition login-page">
    <div class="forgot-password-container">
        <div class="card forgot-password-card">
            <div class="logo">Đặt lại mật khẩu</div>
            <p class="mb-4">Nhập email của bạn để đặt lại mật khẩu</p>
            <form asp-action="Index" method="post">
                <div class="form-group">
                    <input type="email" asp-for="EmailAddress" class="form-control py-2" placeholder="Email" required>
                </div>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                <button type="submit" class="btn btn-primary">Gửi liên kết đặt lại mật khẩu</button>
            </form>
            <div class="text-center mt-3">
                <a asp-controller="Login">Trở lại đăng nhập</a>
            </div>
        </div>
    </div>

