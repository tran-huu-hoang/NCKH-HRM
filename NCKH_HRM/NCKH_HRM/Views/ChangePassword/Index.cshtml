@model NCKH_HRM.ViewModels.ChangePassword

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Change Password</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/changepassword.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div class="change-password-container">
        <div class="card change-password-card">
            <div class="logo">Change Password</div>
            <form asp-action="Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="password" class="form-control py-2" name="CurrentPassword" placeholder="Mật khẩu cũ" required>
                </div>
                <div class="form-group">
                    <input asp-for="NewPassword" type="password" class="form-control py-2" name="NewPassword" placeholder="Mật khẩu mới" required>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" type="password" class="form-control py-2" name="ConfirmPassword" placeholder="Gõ lại mật khẩu mới" required>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <input type="submit" class="btn btn-primary" value="Đổi mật khẩu">
            </form>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 5">
            <div class="toast bg-danger text-light" id="loginErrorToast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <strong class="me-auto">Thông báo</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @TempData["ErrorMessage"]
                </div>
            </div>
        </div>
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var toastElement = document.getElementById('loginErrorToast');
            var toast = new bootstrap.Toast(toastElement);
            toast.show();

            // Đóng notification sau 5 giây
            setTimeout(function () {
                toast.hide();
            }, 5000); // 5000 milliseconds = 5 seconds
        });
    </script>

    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}