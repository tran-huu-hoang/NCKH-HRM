@model IEnumerable<NCKH_HRM.ViewModels.AttendanceSheet>
@{
    ViewData["Title"] = "AttendanceSheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var datelearns = ViewBag.dateLearn;
    var stt = 0;
}
<style>
    .scroll-container {
        width: 100%;
        overflow-x: auto; /* Only horizontal scrollbar */
        overflow-y: hidden; /* Hide vertical scrollbar */
    }

    .content {
        width: calc(8rem*@ViewBag.countDateLearn);
    }

    .height-48px{
        height: 48px;
    }

    .col1of12 {
        width: 8rem;
    }
</style>

<h1 class="py-3">Danh sách điểm danh sinh viên học phần @ViewBag.TermName</h1>

<div class="container mt-5">
    <form method="post" asp-action="StudentInTerm">
        <div class="d-flex justify-content-between mb-3">
            <a asp-action="StudentInTerm" asp-route-id="@ViewBag.detailTerm" class="btn btn-success" value="">Điểm danh hôm nay</a>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="d-flex">
                    <div class="col-6 border border-top-0 border-bottom-0 border-left-0">
                        <div class="row mb-3 height-48px">
                            <div class="col-1"><strong>STT</strong></div>
                            <div class="col-3"><strong>MSV</strong></div>
                            <div class="col-5"><strong>Tên SV</strong></div>
                            <div class="col-3"><strong>CC</strong></div>
                        </div>
                        @foreach (var item in Model)
                        {
                            var total = (item.NumberOfBeginClassesAttended + item.NumberOfEndClassesAttended + (item.NumberOfBeginLate + item.NumberOfEndLate) / 2);
                            stt++;
                            <div class="row mb-3">
                                <div class="col-1">@stt</div>
                                <div class="col-3">@item.StudentCode</div>
                                <div class="col-5">@item.StudentName</div>
                                <div class="col-3 @if (( total/ item.CountDateLearn) <= 0.8){
                                    <text>text-danger</text>
                                }"> @(Math.Round(total * 100 / item.CountDateLearn)) </div>
                            </div>
                        }
                    </div>
                    <div class="col-6 scroll-container">
                        <div class="content">
                            <div class="row mb-3 justify-content-around">
                                @foreach (var item in datelearns)
                                {
                                    <div class="col1of12 row text-center"><strong>@item.DateLearn.ToString("dd/MM")</strong>
                                        <div class="col-6"><strong>DG</strong></div>
                                        <div class="col-6"><strong>CG</strong></div>
                                    </div>
                                }
                            </div>
                            @foreach (var item in Model)
                            {
                                <div class="row mb-3 justify-content-around">
                                    @for (int i = 0; i < item.ListBeginClass.Count; i++)
                                    {
                                        string statusText1 = "";
                                        string textColor1 = "";
                                        string statusText2 = "";
                                        string textColor2 = "";
                                        if (item.ListBeginClass[i] == 1)
                                        {
                                            statusText1 = "P";
                                        }
                                        else if (item.ListBeginClass[i] == 2)
                                        {
                                            statusText1 = "A";
                                            textColor1 = "text-warning";
                                        }
                                        else if (item.ListBeginClass[i] == 3)
                                        {
                                            statusText1 = "PA";
                                            textColor1 = "text-warning";
                                        }
                                        else if (item.ListBeginClass[i] == 4)
                                        {
                                            statusText1 = "P-";
                                            textColor1 = "text-danger";
                                        }
                                        if (item.ListEndClass[i] == 1)
                                        {
                                            statusText2 = "P";
                                        }
                                        else if (item.ListEndClass[i] == 2)
                                        {
                                            statusText2 = "A";
                                            textColor2 = "text-warning";
                                        }
                                        else if (item.ListEndClass[i] == 3)
                                        {
                                            statusText2 = "PA";
                                            textColor2 = "text-warning";
                                        }
                                        else if (item.ListEndClass[i] == 4)
                                        {
                                            statusText2 = "P-";
                                            textColor2 = "text-danger";
                                        }
                                        <div class="col1of12 row text-center">
                                            @* <input type="text" class="form-control" value="@statusText" name="@($"Statuses[{stt}][{i}]")" required /> *@
                                            <div class="mb-0 col-6 @textColor1">@statusText1</div>
                                            <div class="mb-0 col-6 @textColor2">@statusText2</div>
                                        </div>
                                    }

                                </div>
                            }
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </form>
</div>